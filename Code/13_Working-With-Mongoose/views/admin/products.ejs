<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head.ejs') %>
  </head>
  <body>
    <%- include('../components/nav.ejs') %>
    <main>
      <% if (prods.length === 0) { %>
      <h1>No Producs Found!</h1>
      <% } else { %>
      <div class="grid">
        <% prods.forEach(prod => { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= prod.title %></h1>
          </header>
          <div class="card__image">
            <img src="<%= prod.imageUrl %>" alt="<%= prod.title %>" />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= prod.price %></h2>
            <p class="product__description"><%= prod.description %></p>
          </div>
          <div class="card__actions">
            <a href="/admin/edit-product/<%= prod._id %>?edit=true" class="btn"
              >Edit</a
            >
            <form action="/admin/delete-product" method="POST">
              <input type="hidden" name="prodId" value="<%= prod._id %>" />
              <button class="btn" type="submit">Delete</button>
            </form>
          </div>
        </article>
        <% }) %>
      </div>
      <% } %>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>
