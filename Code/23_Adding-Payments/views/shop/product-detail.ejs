<!DOCTYPE html>
<html lang='en'>
  <head>
    <%- include('../components/head.ejs') %>
  </head>
  <body>
    <%- include('../components/nav.ejs') %>
    <main class='centered'>
      <h1><%= product.title %></h1>
      <hr />
      <div class='image'>
        <img src='/<%= product.imageUrl %>' alt='<%= product.title %>' />
      </div>
      <h2>$<%= product.price %></h2>
      <p><%= product.description %></p>
      <% if (isAuthenticated) { %>
        <%- include('../components/add-to-cart.ejs') %>
      <% } %>
    </main>
    <script src='/js/main.js'></script>
  </body>
</html>
