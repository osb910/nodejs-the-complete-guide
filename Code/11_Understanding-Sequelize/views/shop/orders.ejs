<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head.ejs') %>
  </head>
  <body>
    <%- include('../components/nav.ejs') %>
    <main>
      <% if (orders.length === 0) { %>
      <h1>Nothing Yet!</h1>
      <% } else { %>
      <ul>
        <% orders.forEach(order => { %>
        <li>
          <h1>Order #<%= order.id %></h1>
          <ul>
            <% order.products.forEach(product => { %>
            <li>
              <%= product.title %> (<%= product.orderItem.quantity %>) - $<%=
              product.price %>
            </li>
            <% }) %>
          </ul>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>
